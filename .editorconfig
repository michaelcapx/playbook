# http://editorconfig.org

# top-most EditorConfig file
root = true

# Defaults for all editor files
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

# Markdown files
[*.md]
max_line_length = 0
trim_trailing_whitespace = false

# Yaml files
[*.yml]
indent_size = 2

# Python files
[*.py]
indent_size = 4

# Jinja2 template files
[*.j2]
end_of_line = lf

[COMMIT_EDITMSG]
max_line_length = 0

