# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
max_line_length = 80
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.{js2,yml}]
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 0

